<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorViolet"
    tools:context=".Controller.QSimpleBoolQuizzActivity">

    <TextView
        android:id="@+id/q_simple_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/colorBleu"/>
    <Button
        android:id="@+id/rep1_simple_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorBleu"
        android:background="@color/colorJaune"/>
    <Button
        android:id="@+id/rep2_simple_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorJaune"
        android:background="@color/colorBleu"/>


</LinearLayout>
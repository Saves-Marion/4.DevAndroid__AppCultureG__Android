<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorViolet"
    tools:context="com.example.projetandroidtsp.Controller.VictoireActivity">

    <TextView
        android:id="@+id/victoire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:textStyle="bold"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@color/colorJaune"
        android:text="@string/text_victoire"/>
    <Button
        android:id="@+id/bouton_victoire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorBleu"
        android:textSize="15dp"
        android:text="@string/button_gameover"/>
    <TextView
        android:id="@+id/victoire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"/>
</LinearLayout>